<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/_head', { css: css, title: 'Tecton | Oops!', env: env }) %>

  <style>
    .container {
      height: 100vh;
    }

    .error-status {
      color: #d6dadc;
      font-size: 4rem;
      font-weight: 600;
      margin-top: 2rem;
      text-align: center;
    }

    .error-status-definition {
      color: #adb4b9;
      text-align: center;
    }

    .error-message {
      color: #001623;
      font-weight: 500;
      text-align: center;
    }
  </style>

</head>
<body>

  <!-- Primary Page Layout
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div id="error" class="container">
    <div class="row">
      <div class="col">
        <h1 class="error-status">
          <%= status %>
        </h1>
        <h5 class="error-status-definition">
          <%= statusDefinition %>
        </h5>
        <p class="error-message">
          <%= message %>
        </p>
      </div>
    </div>
  </div>

  <!-- Scripts
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script>
    console.log(<%= `\`${stack}\`` %>);
  </script>

  <!-- End Document
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>

</html